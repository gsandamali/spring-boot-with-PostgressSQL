<?xml version="1.0" encoding="UTF-8"?>   
<databaseChangeLog
   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:pro="http://www.liquibase.org/xml/ns/pro"
   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
      http://www.liquibase.org/xml/ns/pro 
      http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">
   <changeSet  author="author"  id="1">
      <createTable tableName="student">
         <column name="id" autoIncrement="true" type="bigserial">
            <constraints  nullable="false"  primaryKey="true"  unique="true"/>
         </column>
         <column  name="username"  type="VARCHAR(256)">
            <constraints  nullable="false"/>
         </column>
         <column  name="password"  type="VARCHAR(256)">
            <constraints  nullable="false"/>
         </column>
         <column  name="firstName"  type="VARCHAR(50)" />
         <column  name="lastName"  type="VARCHAR(50)" />
         <column  name="email"  type="VARCHAR(50)" />
         <column  name="dateOfBirth"  type="date" />
         <column  name="loggedIn"  type="BOOLEAN" />
      </createTable>
   </changeSet>
   <changeSet  author="liquibase-docs"  id="renameColumn-example">  
      <dropColumn    
            columnName="firstName"   
            tableName="student"/>  
      <dropColumn    
            columnName="lastName"   
            tableName="student"/>  
</changeSet>
<changeSet author="liquibase-docs" id="addColumn-example"> 
	<addColumn tableName="person" >
		<column name="address" 
			position="2"  
			type="varchar(255)"/>  
		<column afterColumn="id" 
			name="name"  
			type="varchar(50)" >  
			<constraints nullable="false" />  
		</column>  
	</addColumn>  
</changeSet>
<changeSet  author="lgg"  id="delete-example">  
      <dropColumn    
            columnName="dateOfBirth"   
            tableName="student"/>  
      <dropColumn    
            columnName="loggedIn"   
            tableName="student"/>  
</changeSet>
</databaseChangeLog>